<p id="notice"><%= notice %></p>

<h1>Datasets</h1>

<table>
  <thead>
    <tr>
      <th>Dataset name</th>
      <th>Dataset owner</th>
      <th>Dataset owner contact</th>
      <th>Dataset url</th>
      <th>Dataset date imported</th>
      <th>Dataset update continously</th>
      <th>Dataset last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= dataset.dataset_name %></td>
        <td><%= dataset.dataset_owner %></td>
        <td><%= dataset.dataset_owner_contact %></td>
        <td><%= dataset.dataset_url %></td>
        <td><%= dataset.dataset_date_imported %></td>
        <td><%= dataset.dataset_update_continously %></td>
        <td><%= dataset.dataset_last_update %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

